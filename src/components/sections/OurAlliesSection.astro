---
import BrandCard from "@components/cards/BrandCard.astro";
import "swiper/css";
---

<section class="our-allies-section custom-section bg-light-blue">
  <div class="custom-container flex flex-col gap-2">
    <div class="our-allies-section__title-container flex flex-col gap-4">
      <h2 class="text-center text-primary-orange text-2xl font-bold">
        Nuestros aliados en Seguridad
      </h2>
      <p class="text-center text-xl text-primary-blue">
        Estas son las marcas l√≠deres que respaldan nuestras soluciones y nos
        permiten ofrecer equipos confiables y certificados.
      </p>
    </div>
    <div class="w-full">
      <div class="swiper w-full" id="brand-carousel">
        <div class="swiper-wrapper flex items-center relative w-full">
          <div class="swiper-slide"><BrandCard image="msa-safety.webp" /></div>
          <div class="swiper-slide"><BrandCard image="3M.webp" /></div>
          <div class="swiper-slide"><BrandCard image="portwest.webp" /></div>
          <div class="swiper-slide"><BrandCard image="showa.webp" /></div>
          <div class="swiper-slide"><BrandCard image="truper.webp" /></div>
          <div class="swiper-slide"><BrandCard image="deltaplus.webp" /></div>
          <div class="swiper-slide"><BrandCard image="steelpro.webp" /></div>
          <div class="swiper-slide"><BrandCard image="wypall.webp" /></div>
          <div class="swiper-slide"><BrandCard image="caruzzo.webp" /></div>
          <div class="swiper-slide"><BrandCard image="segpro.webp" /></div>
          <div class="swiper-slide"><BrandCard image="clute.webp" /></div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import Swiper from "swiper";
  import { Autoplay } from "swiper/modules";

  const swiper = new Swiper("#brand-carousel", {
    modules: [Autoplay],
    autoplay: {
      delay: 300,
      disableOnInteraction: false,
    },
    slidesPerView: 4,
    spaceBetween: 35,
    freeMode: true,
    loop: true,
    speed: 2000,
    breakpoints: {
      320: {
        slidesPerView: 5,
        spaceBetween: 50,
      },
      1366: {
        slidesPerView: 6,
        spaceBetween: 65,
      },
      1920: {
        slidesPerView: 7,
        spaceBetween: 80,
      },
    },
  });
</script>

<script>
  import {
    sectionTitleUpAnimation,
    sectionIntersectionObserver,
  } from "@functions/animations";

  document.addEventListener("DOMContentLoaded", () => {
    const ourAlliesSection = document.querySelector(".our-allies-section")!;
    const titleContainer = document.querySelector(
      ".our-allies-section__title-container"
    )!;
    const titleText = titleContainer.querySelector("h2")!;
    const titleDescription = titleContainer.querySelector("p")!;

    sectionIntersectionObserver(() => {
      sectionTitleUpAnimation([titleText, titleDescription], 0.15);
    }).observe(ourAlliesSection);
  });
</script>
