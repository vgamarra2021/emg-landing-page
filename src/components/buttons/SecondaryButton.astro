---
interface Props {
  title: string;
  color?: string;
  className?: string;
}
const { title, color, className }: Props = Astro.props;
---

{
  color === "primary-orange" ? (
    <div
      class={`flex items-center border-primary-orange border-2 w-fit h-fit px-6 py-2 rounded-md cursor-pointer text-center gap-2 ${className || ""}`}
    >
      <p class="text-primary-orange font-semibold text-lg w-max">{title}</p>
      <slot />
    </div>
  ) : (
    <div
      class={`flex items-center border-white border-2 w-fit h-fit px-6 py-2 rounded-md cursor-pointer text-center gap-2 ${className || ""}`}
    >
      <p class="text-white font-semibold text-lg w-max">{title}</p>
      <slot />
    </div>
  )
}
