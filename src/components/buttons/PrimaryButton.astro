---
interface Props {
  title: string;
  color?: string;
  className?: string;
}
const { title, color, className }: Props = Astro.props;
---

{
  color === "primary-blue" ? (
    <div
      class={`button flex items-center justify-center gap-2 bg-primary-blue w-fit h-fit px-6 py-2 rounded-md cursor-pointer ${className ?? ""}`}
    >
      <slot name="preffix" />
      <p class="text-white font-semibold text-lg">{title}</p>
      <slot />
    </div>
  ) : color === "yellow" ? (
    <div
      class={`button flex items-center justify-center gap-2 bg-yellow-400 w-fit h-fit px-6 py-2 rounded-md cursor-pointer ${className ?? ""}`}
    >
      <slot name="preffix" />
      <p class="text-black font-semibold text-lg">{title}</p>
      <slot />
    </div>
  ) : (
    <div
      class={`button flex items-center justify-center gap-2 bg-primary-orange w-fit h-fit px-6 py-2 rounded-md cursor-pointer ${className ?? ""}`}
    >
      <slot name="preffix" />
      <p class="text-white font-semibold text-lg">{title}</p>
      <slot />
    </div>
  )
}
