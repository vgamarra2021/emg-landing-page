---
interface Props {
  label: string;
  placeholder: string;
  id: string;
  name?: string;
}
const { label, placeholder, id, name = "" }: Props = Astro.props;
---

<div class="flex flex-col">
  <label for={id} class="font-semibold">{label}</label>
  <input
    class="border border-primary-blue/70 rounded-md px-4 py-2 bg-white text-primary-blue"
    type="text"
    id={id}
    name={name}
    placeholder={placeholder}
  />
</div>
