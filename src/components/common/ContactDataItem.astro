---
interface Props {
  title: string;
  items: string[];
}
const { title, items } = Astro.props;
---

<div class="flex flex-row gap-4">
  <slot />
  <div class="flex flex-col">
    <strong class="text-lg w-max mb-1">{title}</strong>
    {items.map((item) => <p class="text-lg w-max max-w-[350px]">{item}</p>)}
  </div>
</div>
