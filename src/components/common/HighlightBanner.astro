---
import SecondaryButton from "@components/buttons/SecondaryButton.astro";
import RightArrowIcon from "@assets/icons/right-arrow.svg";

interface Props {
  title: string;
  buttonTitle: string;
  size?: string;
}

const { title, buttonTitle, size = "2xl" }: Props = Astro.props;
---

<section class="bg-primary-orange custom-section w-full">
  <div class="custom-container flex flex-col xl:flex-row justify-between items-start xl:items-center gap-4">
    <div class="flex flex-col gap-2">
      <p class={`font-semibold text-white text-${size} leading-11 max-w-5xl`}>
        {title}
      </p>
      <slot />
    </div>
    <SecondaryButton title={buttonTitle}>
      <RightArrowIcon stroke="#fff" />
    </SecondaryButton>
  </div>
</section>
